<Window x:Class="rpm13.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm13"
        mc:Ignorable="d"
        Title="Настройки" Height="250" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Количество строк:"/>
            <TextBox TextWrapping="Wrap" Width="200" Margin="5"/>
            <Label Content="Количество столбцов:"/>
            <TextBox TextWrapping="Wrap" Width="200" Margin="5"/>
            <Button x:Name="btnSave" Content="Сохранить" Width="200" Margin="5"/>
            <Button x:Name="btnEsc" Content="Отмена" Width="200" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
