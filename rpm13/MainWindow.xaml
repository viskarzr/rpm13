<Window x:Class="rpm13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm13"
        mc:Ignorable="d"
        Title="Практическая работа №13 - Создание масштабируемого интерфейса приложения." Height="650" Width="700" 
        Icon="/icons8-офис-50.png" MinHeight="550" MinWidth="600"  MaxHeight="650" MaxWidth="700" Activated="Window_Activated">
    <Grid Background="#FF9ED6A1">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="Исходные данные" Margin="5,25,5,5">
            <DataGrid x:Name="DataGrid" CellEditEnding="DataGrid_CellEditEnding" SelectionChanged="DataGrid_SelectionChanged"/>
        </GroupBox>
        <ToolBar VerticalAlignment="Top" Background="#FF2B9340" >
            <Button x:Name="btnSave" ToolTip="Сохранить" Click="btnSave_Click" >
                <Image Source="/icon/icons8-создать-новый-50.png" Width="16" Height="16"></Image>
            </Button>
            <Separator></Separator>
            <Button x:Name="btnOpen" ToolTip="Открыть" Click="btnOpen_Click">
                <Image Source="/icon/папка-50.png" Width="16" Height="16"></Image>
            </Button>
            <Separator></Separator>
            <Button x:Name="btnFull" ToolTip="Быстрое создание" Click="btnFull_Click">
                <Image Source="/icon/icons8-добавить-50.png" Width="16" Height="16"></Image>
            </Button>
            <Separator></Separator>
            <Button x:Name="btnInfo" ToolTip="О программе" Click="btnAbout_Click">
                <Image Source="/icon/icons8-шестерни-50.png" Width="16" Height="16"></Image>
            </Button>
        </ToolBar>
        <Grid Grid.Row="2" Margin="10,4,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Исходные данные" Margin="5,10,5,10">
                <GroupBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="cmClean" Header="Очистить все поля" Click="cmClean_Click"></MenuItem>
                    </ContextMenu>
                </GroupBox.ContextMenu>
                <StackPanel VerticalAlignment="Center">
                    <Label Content="Колонки:" Margin="5,0"/>
                    <TextBox x:Name="tbCol" TextWrapping="Wrap" Margin="10,0"/>
                    <Label Content="Строки:" Margin="5,0"/>
                    <TextBox x:Name="tbRow" TextWrapping="Wrap" Margin="10,0"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Результат" Grid.Column="1" Margin="5,10,5,10">
                <StackPanel VerticalAlignment="Center">
                    <TextBox x:Name="tbRez" TextWrapping="Wrap"  Margin="10,5" IsReadOnly="True"/>
                    <Button x:Name="btnRez" Content="Рассчитать" Margin="10,5" Click="btnRez_Click" IsDefault="True"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Кнопки программы" Grid.Column="2" Margin="15,10,5,10">
                <StackPanel VerticalAlignment="Center">
                    <Button x:Name="btnAbout" Content="О программе" Margin="10,5" Click="btnAbout_Click"/>
                    <Button x:Name="btnExit" Content="Выход" Margin="10,5" Click="btnExit_Click" IsDefault="True"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <StatusBar Grid.Row="4" VerticalContentAlignment="Bottom">
            <TextBlock x:Name="var" Text="Вариант №5"></TextBlock>
            <Separator></Separator>
            <TextBlock x:Name="tbMatrix"></TextBlock>
        </StatusBar>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height ="5"></GridSplitter>
    </Grid>
</Window>
